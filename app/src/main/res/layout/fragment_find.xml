        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/hdtj_text"
            android:textColor="@color/text_hint"
            android:textSize="40px" />
    </LinearLayout>

    <LinearLayout
